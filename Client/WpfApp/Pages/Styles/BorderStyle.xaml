<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfApp">
    <Style x:Key="MT_BorderWindow" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="12.5"/>
        <Setter Property="BorderThickness" Value="0.5"/>
        <Setter Property="BorderBrush" Value="#E4E8F1"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="2" BlurRadius="2" Color="Black" Opacity="0.1"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="MT_BorderGrey" TargetType="Border">
        <Setter Property="Background" Value="#F9FAFC"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Padding" Value="30,15"/>
        <Setter Property="CornerRadius" Value="12.5"/>
    </Style>
</ResourceDictionary>